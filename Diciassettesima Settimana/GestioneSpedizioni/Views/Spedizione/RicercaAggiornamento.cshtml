@model GestioneSpedizioni.Models.Aggiornamenti

@{
    ViewData["Title"] = "Ricerca e Aggiornamento Stato Spedizione";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RicercaAggiornamento" method="post">
    <div class="form-group">
        <label for="numeroSpedizione">Numero Spedizione</label>
        <input type="text" class="form-control" id="numeroSpedizione" name="numeroSpedizione" placeholder="Inserisci il numero della spedizione" required>
    </div>
    <button type="submit" class="btn btn-primary">Cerca</button>
</form>

@if (Model != null)
{
    <h3>Dettagli Spedizione</h3>
    <!-- Mostra i dettagli della spedizione e permette di aggiornare lo stato -->
    <form asp-action="AggiornaStato">
        <input asp-for="SpedizioneId" type="hidden" />

        <div class="form-group">
            <label asp-for="Stato"></label>
            <input asp-for="Stato" class="form-control" />
            <span asp-validation-for="Stato" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Luogo"></label>
            <input asp-for="Luogo" class="form-control" />
            <span asp-validation-for="Luogo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descrizione"></label>
            <input asp-for="Descrizione" class="form-control" />
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Aggiorna</button>
    </form>
}
